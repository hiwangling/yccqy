<form  id="formreserve">
    <div class="box">
      <div class="box-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>服务名称</label>
              <input class="form-control" name="servicename" placeholder="请输入服务名称" type="text">
            </div>
          </div>
 
          <div class="col-md-6">
            <div class="form-group">
              <label>服务类型</label>
              <select name="servicetype" class="form-control">
					{foreach name="servicetype" item="vo" key="k" }
					   <option value="{$k}">{$vo}</option>
					{/foreach}
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>定价类型</label>
              <select name="pricetype" class="form-control">
					{foreach name="pricetype" item="vo" key="k" }
					   <option value="{$k}">{$vo}</option>
					{/foreach}
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>计价单位</label>
              <select name="chargeunit" class="form-control">
					{foreach name="chargeunit" item="vo" key="k" }
					   <option value="{$vo}">{$vo}</option>
					{/foreach}
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>销售价格</label>
			  <span></span>
              <input class="form-control" name="price" placeholder="请输入价格" type="text">
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>服务负责部门</label>
              <select name="deptid" class="form-control">
			        <option value="0">请选择</option>
					{volist name='branchlist' id='vo'}
					   <option value="{$vo['id']}">{$vo['name']}</option>
					{/volist}
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>是否推送</label>
              <select name="ifpushbranch" class="form-control">
			  		<option value="2">负责部门</option>
					<option value="1">所有部门</option>
			  		<option value="0">否</option>
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>可后续添加服务</label>
              <select name="iffollowadd" class="form-control">
			               <option value="0">否</option>
					<option value="1">是</option>
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>是否显示</label>
              <select name="ifshow" class="form-control">
			  	 <option value="1">是</option>
			        <option value="0">否</option>
              </select>
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>是否可用</label>
              <select name="status" class="form-control">
			  		<option value="1">是</option>
			        <option value="0">否</option>
              </select>
            </div>
          </div>
            
              <div class="col-md-6">
            <div class="form-group">
              <label>是否反馈结果</label>
              <select name="ifreturn" class="form-control">
			  	 <option value="1">是</option>
			        <option value="0">否</option>
              </select>
            </div>
          </div>
            
		  
		   <div class="col-md-6">
            <div class="form-group">
              <label>排序</label>
			  <span></span>
              <input class="form-control" name="iorder" placeholder="排序" value="0" type="text">
            </div>
          </div>
		  
		  <div class="col-md-6">
            <div class="form-group">
              <label>服务描述</label>
			  <textarea class="form-control" name="vcnote" rows="3" placeholder="请输入服务描述"></textarea>
            </div>
          </div>
        </div>
		
      </div></form>
       <div class="modal-footer"  >
        <a   href="javascript:" onclick="ServiceinfoAdd_ajax_submit();"  type="button"  class="btn btn-default"><span class="ladda-label"><i class="fa fa-check"></i> 提交</span></a>
        <a type="button" class="btn btn-default" data-dismiss="modal"> <span class="ladda-label"><i class="fa fa-close"></i> 关闭</span></a>
      
      </div>
    </div>
 

